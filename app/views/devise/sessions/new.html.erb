<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col item-center'}) do |f| %>
  <div class='flex flex-col my-5 m-auto'>
    <%= f.email_field :email, required: true, autofocus: true, placeholder: 'Email', class: 'text-[2em] w-[60vw] bg-slate-300 mx-3 text-slate-700 font-semibold inline-block' %>
  </div>

  <div class='flex flex-col my-5 m-auto'>
    <%= f.password_field :password, required: true, autofocus: true, placeholder: 'Password', autocomplete: "new-password", class: 'text-[2em] w-[60vw] bg-slate-300 mx-3 text-slate-700 font-semibold inline-block' %>
  </div>

  <div class="actions m-auto py-1 px-4 bg-amber-300 text-[2em]">
    <%= f.submit "Log In" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
